#porbar
    width 100%
    height 60px
    position relative
#poabar
    position absolute
    top 0
    left 0
    height 60px
    background-color #ddd
    width 100%
    z-index 10
    .poabar-list
        position relative
        margin 0
        padding 0
        list-style none
        font-size 0
        li
            position relative
            display inline-block
            font-size 12px
            height 60px
            color #fff
            min-width 20px
            vertical-align top
            p
              padding 0 10px
              text-align center
              line-height 35px
        .login-pbar
            cursor pointer
            &:hover
              background-color #b37
